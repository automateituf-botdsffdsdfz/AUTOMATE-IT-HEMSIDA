{
  "$schema": "https://json.schemastore.org/config",
  "brand": {
    "name": "Automate It UF",
    "url": "https://example.com",
    "description": "Automatiseringstjänster med fokus på enkelhet, precision och pålitlighet."
  },
  "colors": {
    "background": "#ffffff",
    "surface": "#f7f8fa",
    "text": "#0b1220",
    "mutedText": "#5b6472",
    "border": "#e5e7eb",
    "primary": "#0A84FF",
    "primaryHover": "#0066dd",
    "primaryFocus": "#004fb0",
    "secondary": "#0BB5A7",
    "secondaryHover": "#089b8e",
    "success": "#16a34a",
    "warning": "#ca8a04",
    "danger": "#dc2626",
    "focusRing": "#94c6ff"
  },
  "typography": {
    "fonts": {
      "system": "-apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica, Arial, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol",
      "display": "Inter, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica, Arial, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol"
    },
    "scale": {
      "h1": "clamp(2.4rem, 2vw + 1.8rem, 3.5rem)",
      "h2": "clamp(1.8rem, 1.2vw + 1.4rem, 2.4rem)",
      "h3": "clamp(1.4rem, 0.8vw + 1.1rem, 1.8rem)",
      "body": "1rem",
      "small": "0.9375rem"
    },
    "lineHeights": {
      "tight": 1.15,
      "snug": 1.3,
      "normal": 1.6
    }
  },
  "radius": {
    "xs": "6px",
    "sm": "10px",
    "md": "14px",
    "lg": "20px",
    "xl": "28px"
  },
  "shadows": {
    "soft": "0 1px 2px rgba(0,0,0,0.04), 0 4px 12px rgba(0,0,0,0.06)",
    "lift": "0 8px 30px rgba(0,0,0,0.08)",
    "focus": "0 0 0 3px rgba(10,132,255,0.25)"
  },
  "spacing": {
    "xs": "0.5rem",
    "sm": "0.75rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4.5rem"
  },
  "motion": {
    "duration": {
      "fast": "120ms",
      "base": "180ms",
      "slow": "220ms"
    },
    "easing": {
      "standard": "cubic-bezier(0.2, 0, 0, 1)",
      "emphasized": "cubic-bezier(0.3, 0, 0, 1)"
    }
  }
}


